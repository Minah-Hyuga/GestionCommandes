<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Gestion Commandes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gestion Commandes</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Commande" asp-action="Index">Commandes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Client" asp-action="Index">Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Produit" asp-action="Index">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Comptable" asp-action="Index">Comptables</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Livraison" asp-action="Index">Livraisons</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Paiement" asp-action="Index">Paiements</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="HistoriqueVersement" asp-action="Index">Historique Versements</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@ViewData["Title"]</h1>
                <hr />
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
