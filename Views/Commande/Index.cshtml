@{
    ViewData["Title"] = "Commandes";
}

<h1>Commandes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Client</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var commande in Model)
        {
            <tr>
                <td>@commande.Id</td>
                <td>@commande.ClientId</td>
                <td>@commande.DateCommande.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@commande.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@commande.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@commande.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
